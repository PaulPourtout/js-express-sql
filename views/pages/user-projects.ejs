<!DOCTYPE html>
<html>
	<head>
		<%- include('../partials/head.ejs') %>
	</head>
	<body>
		<header>
			<%- include('../partials/header.ejs') %>
		</header>
		<section class="user-section">

			<h2>Les projets de <%= user.firstName %> :</h2>
			<ul class="users-list">
				<% projects.map(function(project) { %>
					<li><a href= <%= `/project/${project.id}` %>><%= project.name %></a></li>
				<% }); %>
			</ul>

			<a class="btn" href= <%= `/user/${user.id}` %> >Retour au profil de <%= user.firstName %></a>
		</section>
		<footer>
			<%- include('../partials/footer.ejs') %>
		</footer>
	</body>
</html>
